@model Microsoft.AspNetCore.Identity.IdentityUser

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

    <ul class="navbar-nav mr-auto">
        @if(ViewBag.usertype == "Supervisor"){
        <li class="nav-item">
            <a data-ajax data-target="ContentPage" class="nav-link text-dark" asp-area="Supervisor" asp-controller="Manage" asp-action="Index">@Localizer["Görüşmeleri Yönet"]</a>
        </li>
        }
        @if(ViewBag.usertype == "Customer"){
        <li class="nav-item">
            <a data-ajax data-target="ContentPage" class="nav-link text-dark" asp-area="Client" asp-controller="Bookings" asp-action="Index">@Localizer["Görüşme Ayarla"]</a>
        </li>
        }
        
    </ul>
    <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" href="#" data-bs-toggle="dropdown">@Model.UserName</a>
            <div class="dropdown-menu" style="text-align: center;">
                <a data-ajax data-target="ContentPage" asp-area="" asp-controller="Accounts" asp-action="ChangePassword" onclick="$('.dropdown-menu').removeClass('show');" class="dropdown-item text-dark">
                            @Localizer["Parola Değiştir"]
                        </a>
                <a data-ajax data-target="ContentPage" asp-area="" asp-controller="Accounts" asp-action="Settings" onclick="$('.dropdown-menu').removeClass('show');" class="dropdown-item text-dark">
                            @Localizer["Hesap Ayarları"]
                        </a>
                        <a data-ajax data-target="ContentPage" asp-area="" asp-controller="Accounts" asp-action="LogOut" onclick="$('.dropdown-menu').removeClass('show');" class="dropdown-item text-dark">
                            @Localizer["Çıkış Yap"]
                        </a>
            </div>
            
        </li>
    </ul>
@if (ViewBag.usertype == "Supervisor")
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" href="#" data-bs-toggle="dropdown">@Localizer["Dil"]</a>
            <div class="dropdown-menu" style="text-align: center;">
                <a asp-area="" asp-route-lang="en" asp-area="Supervisor" asp-controller="Home" asp-action="Index" onclick="$('.dropdown-menu').removeClass('show');" class="dropdown-item text-dark">
                            @Localizer["İngilizce"]
                        </a>
                <a  asp-area="" asp-route-lang="tr" asp-area="Supervisor" asp-controller="Home" asp-action="Index" onclick="$('.dropdown-menu').removeClass('show');" class="dropdown-item text-dark">
                            @Localizer["Türkçe"]
                        </a>
                        
            </div>
        </li>
    </ul>
   }
   @if (ViewBag.usertype == "Customer")
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" href="#" data-bs-toggle="dropdown">@Localizer["Dil"]</a>
            <div class="dropdown-menu" style="text-align: center;">
                <a asp-area="" asp-route-lang="en" asp-area="Client" asp-controller="Home" asp-action="Index" onclick="$('.dropdown-menu').removeClass('show');" class="dropdown-item text-dark">
                            @Localizer["İngilizce"]
                        </a>
                <a  asp-area="" asp-route-lang="tr" asp-area="Client" asp-controller="Home" asp-action="Index" onclick="$('.dropdown-menu').removeClass('show');" class="dropdown-item text-dark">
                            @Localizer["Türkçe"]
                        </a>
                        
            </div>
        </li>
    </ul>
   }
    <script src="~/js/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/notification.js" asp-append-version="true"></script>
    