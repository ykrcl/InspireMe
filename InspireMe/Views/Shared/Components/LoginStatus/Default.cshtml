@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

    
    <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" href="#" data-bs-toggle="dropdown">@Localizer["Kullanıcı"]</a>
            <div class="dropdown-menu" style="text-align: center;">
                         <a data-ajax data-target="ContentPage" asp-area="" asp-controller="Accounts" asp-action="Login" onclick="$('.dropdown-menu').removeClass('show');" class="dropdown-item text-dark">
                            @Localizer["Giriş Yap"]
                        </a>
                         <a data-ajax data-target="ContentPage" asp-area="" asp-controller="Accounts" asp-action="Register" onclick="$('.dropdown-menu').removeClass('show');" class="dropdown-item text-dark">
                            @Localizer["Kayıt Ol"]
                        </a>
            </div>
            
        </li>
    </ul>
     <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" href="#" data-bs-toggle="dropdown">@Localizer["Dil"]</a>
            <div class="dropdown-menu" style="text-align: center;">
                <a  asp-area="" asp-route-lang="en" asp-controller="Home" asp-action="Index" onclick="$('.dropdown-menu').removeClass('show');" class="dropdown-item text-dark">
                            @Localizer["İngilizce"]
                        </a>
                <a  asp-area="" asp-route-lang="tr" asp-controller="Home" asp-action="Index" onclick="$('.dropdown-menu').removeClass('show');" class="dropdown-item text-dark">
                            @Localizer["Türkçe"]
                        </a>
                        
            </div>
        </li>
    </ul>
    