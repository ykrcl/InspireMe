@model IEnumerable<InspireMe.Data.Booking>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] =  Localizer["Randevu Alınan Günler"];
    var culture = System.Globalization.CultureInfo.CurrentCulture;
}

<h1>@Localizer["Randevu Alınan Günler"]</h1>

<div class="container">

    <div class="card">
  <div class="card-body">

<table class="table table-striped">
    <thead>
        <tr>
            
            <th>
                @Localizer["Tarih"]
            </th>
            
            <th>
                @Localizer["Saat"]
            </th>
            <th>
                @Localizer["Kullanıcı Adı"]
            </th>
            
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @item.Date.ToLongDateString()
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Hour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.UserName)
            </td>
            
           
            <td>
                 <a data-ajax data-nonstate data-ajaxafter="$('#PageModal').modal('show');"  data-target="PageModalContent" class="btn btn-danger" asp-area="Supervisor" asp-controller="Manage" asp-action="DeleteRequestedBooking" asp-route-id="@item.Id">@Localizer["Sil"]</a>
                 <a data-ajax data-nonstate data-ajaxafter="$('#PageModal').modal('show');"  data-target="PageModalContent" class="btn btn-success" asp-area="Supervisor" asp-controller="Manage" asp-action="VerifyRequestedBooking" asp-route-id="@item.Id">@Localizer["Onayla"]</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
